<section class="section">
  <div class="container">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
          UPDATE CONTACTS
        </p>
        <a href="/user/dashboard" class="card-header-icon">
          <button class="button is-dark">
            Go back
          </button>
        </a>
      </header>
      <div class="card-content">
        <form action="/user/update-contact/{{contact._id}}" method="POST">
          <div class="field">
            <label class="label">Name</label>
            <div class="control">
              <input class="input" type="text" value="{{contact.name}}" name="name">
            </div>
          </div>
          <div class="field">
            <label class="label">Number</label>
            <div class="control">
              <input class="input" type="text" value="{{contact.number}}" name="number">
            </div>
          </div>
          <div class="field">
            <label class="label">Email</label>
            <div class="control">
              <input class="input" type="text" value="{{contact.email}}" name="email">
            </div>
          </div>
          <div class="field">
            <div class="control">
              <button class="button is-primary">Update contact</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
