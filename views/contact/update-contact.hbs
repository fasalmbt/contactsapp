<div class="card">
    <div class="card-body text-center">
        <h1>UPDATE CONTACTS</h1>
        <a href="/user/dashboard"><button type="button" class="btn btn-dark">Go back</button></a>
    </div>
</div>
<br />
<br />
<div class="form">
    <form action="/user/update-contact/{{contact._id}}" method="POST">
        <div class="form-row">
            <div class="form-group col-md-12">
                <input type="text" value="{{contact.name}}" name="name"/>
            </div>
            <div class="form-group col-md-12">
                <input type="text" value="{{contact.number}}" name="number" />
            </div>
            <div class="form-group col-md-12">
                <input type="text" value="{{contact.email}}" name="email" />
            </div>
            <button>Update contact</button>
    </form>
</div>
</div>