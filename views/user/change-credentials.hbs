<section class="section">
  <div class="container">
    <div class="card">
      <div class="card-content">
        <h1 class="title has-text-centered">CHANGE CREDENTIALS</h1>
        <div class="columns is-centered">
          <div class="column is-half">
            <form action="/user/change-credentials/{{user._id}}" method="POST">
              <div class="field">
                <label class="label">Username</label>
                <div class="control">
                  <input class="input" type="text" value="{{user.username}}" name="username" required>
                </div>
              </div>

              <div class="field">
                <label class="label">Email</label>
                <div class="control">
                  <input class="input" type="email" value="{{user.email}}" name="email" required>
                </div>
              </div>

              <div class="field is-grouped is-grouped-centered">
                <div class="control">
                  <button type="submit" class="button is-primary">Update Credentials</button>
                </div>
                <div class="control">
                  <a href="/user/dashboard" class="button is-light">Cancel</a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
